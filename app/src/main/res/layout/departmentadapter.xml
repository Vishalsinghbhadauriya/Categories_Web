<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_marginTop="5dp"
    android:background="@android:color/holo_green_light"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.v7.widget.CardView xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:id="@+id/card_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        card_view:cardCornerRadius="10dp"
        tools:ignore="MissingConstraints">
        <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

    <TextView
        android:id="@+id/categoryid"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="categoryid"
        android:layout_marginTop="20dp"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="5dp"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/department_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:hint="department_id"
        app:layout_constraintTop_toBottomOf="@+id/categoryid"
        tools:layout_editor_absoluteX="0dp"
        tools:ignore="MissingConstraints" />
    <TextView
        android:id="@+id/departmentName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:hint="departmentName"
        app:layout_constraintTop_toBottomOf="@+id/department_id"
        tools:layout_editor_absoluteX="0dp"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/company_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:hint="company_id"
        app:layout_constraintTop_toBottomOf="@+id/departmentName"
        tools:layout_editor_absoluteX="0dp"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/companyName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:hint="companyName"
        app:layout_constraintTop_toBottomOf="@+id/company_id"
        tools:layout_editor_absoluteX="0dp"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:hint="title"
        app:layout_constraintTop_toBottomOf="@+id/companyName"
        tools:layout_editor_absoluteX="0dp"
        tools:ignore="MissingConstraints"/>

    <TextView
        android:id="@+id/mobile"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:hint="mobile"
        app:layout_constraintTop_toBottomOf="@+id/title"
        tools:layout_editor_absoluteX="0dp"
        tools:ignore="MissingConstraints"/>

    <TextView
        android:id="@+id/landline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:hint="land-line"
        app:layout_constraintTop_toBottomOf="@+id/mobile"
        tools:layout_editor_absoluteX="4dp"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/colorCode"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:hint="colorCode"
        app:layout_constraintTop_toBottomOf="@+id/landline"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="0dp" />

    <TextView
        android:id="@+id/description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:hint="description"
        app:layout_constraintTop_toBottomOf="@+id/colorCode"
        tools:layout_editor_absoluteX="0dp"
        tools:ignore="MissingConstraints"/>

    <TextView
        android:id="@+id/openingTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:hint="openingTime"
        app:layout_constraintTop_toBottomOf="@+id/description"
        tools:layout_editor_absoluteX="0dp"
        tools:ignore="MissingConstraints"/>

    <TextView
        android:id="@+id/address1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:hint="address1"
        app:layout_constraintTop_toBottomOf="@+id/openingTime"
        tools:layout_editor_absoluteX="0dp"
        tools:ignore="MissingConstraints"/>

    <TextView
        android:id="@+id/address2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:hint="address2"
        app:layout_constraintTop_toBottomOf="@+id/address1"
        tools:layout_editor_absoluteX="0dp"
        tools:ignore="MissingConstraints"/>

    <TextView
        android:id="@+id/address3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:hint="address3"
        app:layout_constraintTop_toBottomOf="@+id/address2"
        tools:layout_editor_absoluteX="0dp"
        tools:ignore="MissingConstraints"/>

    <TextView
        android:id="@+id/address4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:hint="address4"
        app:layout_constraintTop_toBottomOf="@+id/address3"
        tools:layout_editor_absoluteX="0dp"
        tools:ignore="MissingConstraints"/>

    <TextView
        android:id="@+id/address5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:hint="address5"
        app:layout_constraintTop_toBottomOf="@+id/address4"
        tools:layout_editor_absoluteX="0dp"
        tools:ignore="MissingConstraints"/>

    <TextView
        android:id="@+id/latitude"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:hint="latitude"
        app:layout_constraintTop_toBottomOf="@+id/address5"
        tools:layout_editor_absoluteX="0dp"
        tools:ignore="MissingConstraints"/>

    <TextView
        android:id="@+id/longitude"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:hint="longitude"
        app:layout_constraintTop_toBottomOf="@+id/latitude"
        tools:layout_editor_absoluteX="0dp"
        tools:ignore="MissingConstraints"/>

    <TextView
        android:id="@+id/emailAddress"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:hint="emailAddress"
        app:layout_constraintTop_toBottomOf="@+id/longitude"
        tools:layout_editor_absoluteX="0dp"
        tools:ignore="MissingConstraints"/>

    <TextView
        android:id="@+id/companyLink"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:hint="companyLink"
        app:layout_constraintTop_toBottomOf="@+id/emailAddress"
        tools:layout_editor_absoluteX="0dp"
        tools:ignore="MissingConstraints"/>

            <ImageView
                android:id="@+id/edit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="180dp"
                android:layout_marginTop="11dp"
                android:background="@drawable/edit_black"
                android:padding="17dp"
                card_view:layout_constraintStart_toEndOf="@+id/department_id"
                card_view:layout_constraintTop_toTopOf="parent"
                tools:ignore="MissingConstraints" />
            <ImageView
                android:id="@+id/delete"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:layout_marginTop="11dp"
                android:background="@drawable/ic_delete_black_24dp"
                android:foregroundGravity="center"
                android:padding="17dp"
                card_view:layout_constraintStart_toEndOf="@+id/edit"
                card_view:layout_constraintTop_toTopOf="parent"
                tools:ignore="MissingConstraints" />
        </android.support.constraint.ConstraintLayout>

    </android.support.v7.widget.CardView>



</android.support.constraint.ConstraintLayout>